<!doctype html>
<html lang="en">
<head>
    <%- include('partials/template/head.ejs') %> 
</head>
<body class="grey">

    <%- include('partials/content/header.ejs') %>

<main>

    <div class="container mt-4">
        <div class="row">
            <div class="col-sm-4">
                <h1 class="feedback-form-title textBlue">Feedback</h1>
                <form class="feedback-form">
                    <div class="form-group">
                        <label for="feedback-form-name">Name</label>
                        <input type="text" class="form-control" id="feedback-form-name" placeholder="Enter your name">
                    </div>

                    <!-- <div class="form-group">
                        <label for="feedback-form-title">Title</label>
                        <input type="text" class="form-control" id="feedback-form-title"
                            placeholder="Title of your feedback">
                    </div> -->

                    <div class="form-group">
                        <label for="feedback-form-message">Message</label>
                        <textarea type="text" placeholder="Please leave your feedback, then hit the submit" class="form-control"
                            id="feedback-form-message" rows="6"></textarea>
                    </div>
                    <button type="submit" class="btn btn-default pull-right bg-secondary text-white">Submit</button>
                </form>
            </div><!-- primary -->
            <aside class="col-sm-8 mt-3">
                <div class="maincontent feedback">
                    <h3 class="article-title textBlue">Comments</h3>
                    <div class="feedback-messages">

                    </div>
                </div>
            </aside><!-- secondary -->
        </div>
    </div><!-- container -->

</main>
    

    <%- include('partials/template/script.ejs')%> 

</body>
</html>